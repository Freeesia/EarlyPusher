<Window x:Class="EarlyPusher.Views.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:EarlyPusher.Views"
        Title="PlayWindow"
        Width="300"
        Height="300"
        AllowsTransparency="True"
        PreviewKeyDown="Window_PreviewKeyDown"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None">
	<Window.Resources>
		<DataTemplate x:Key="earlyModeTemplate">
			<v:EarlyModeView />
		</DataTemplate>
		<DataTemplate x:Key="choice4ModeTemplate">
			<v:Choice4ModeView />
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<ContentPresenter Content="{Binding SelectedMedia.Media}" />
		<ContentPresenter Content="{Binding }">
			<ContentPresenter.ContentTemplateSelector>
				<v:PlayViewSelecter />
			</ContentPresenter.ContentTemplateSelector>
		</ContentPresenter>
	</Grid>
</Window>
