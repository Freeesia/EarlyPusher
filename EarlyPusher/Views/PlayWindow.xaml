<Window x:Class="EarlyPusher.Views.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="http://app.studiofreesia.com/sflibs"
        xmlns:v="clr-namespace:EarlyPusher.Views"
        Title="PlayWindow"
        Width="300"
        Height="300"
        AllowsTransparency="True"
        Background="Black"
        PreviewKeyDown="Window_PreviewKeyDown"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None">
	<ContentPresenter Margin="10" Content="{Binding }">
		<ContentPresenter.ContentTemplate>
			<DataTemplate>
				<ContentPresenter Content="{Binding PlayView}" />
			</DataTemplate>
		</ContentPresenter.ContentTemplate>
	</ContentPresenter>
</Window>
