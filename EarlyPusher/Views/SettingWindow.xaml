<Window x:Class="EarlyPusher.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:b="clr-namespace:StFrLibs.Core.Behaviors;assembly=StFrCore"
        xmlns:ba="clr-namespace:EarlyPusher.Basis"
        xmlns:c="clr-namespace:StFrLibs.Core.Converter;assembly=StFrCore"
        xmlns:ctrl="clr-namespace:EarlyPusher.Controls"
        xmlns:cv="clr-namespace:EarlyPusher.Modules.ChoiceTab.Views"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:ev="clr-namespace:EarlyPusher.Modules.EarlyTab.Views"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:sbv="clr-namespace:EarlyPusher.Modules.SortTab.Views"
        xmlns:sv="clr-namespace:EarlyPusher.Modules.Setting1Tab.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="SettingWindow"
        Width="800"
        Height="600">
	<i:Interaction.Triggers>
		<i:EventTrigger EventName="Loaded">
			<i:InvokeCommandAction Command="{Binding LoadedCommand}" />
		</i:EventTrigger>
		<i:EventTrigger EventName="Closing">
			<i:InvokeCommandAction Command="{Binding ClosingCommand}" />
		</i:EventTrigger>
	</i:Interaction.Triggers>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Menu Grid.Row="0" DockPanel.Dock="Top">
			<MenuItem Header="プレイウィンドウ">
				<MenuItem Command="{Binding WindowCommand}" Header="ウィンドウ表示/非表示(_W)" />
				<MenuItem Command="{Binding WindowMaxCommand}" Header="ウィンドウ最大化(_M)" />
			</MenuItem>
		</Menu>

		<TabControl Grid.Row="1"
		            SelectedValue="{Binding SelectedTab}"
		            SelectedValuePath="DataContext">
			<TabItem DataContext="{Binding OperateSetting}" Header="設定専用">
				<sv:OperateSettingView />
			</TabItem>
			<TabItem DataContext="{Binding OperateEarly}" Header="早押し">
				<ev:OperateEarlyView />
			</TabItem>
			<TabItem DataContext="{Binding OperateChoice}" Header="選択">
				<cv:OperateChoiceView />
			</TabItem>
			<TabItem DataContext="{Binding OperateSort}" Header="並べ替え">
				<sbv:OperateSortView />
			</TabItem>
		</TabControl>

	</Grid>
</Window>
