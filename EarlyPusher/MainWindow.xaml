<Window x:Class="EarlyPusher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sf="clr-namespace:StFrLibs.Core.Behaviors;assembly=StFrCore"
        Title="MainWindow" Height="350" Width="525">
	<DockPanel>
		<Button DockPanel.Dock="Top" Content="検索" Command="{Binding SearchCommand}" />
		<ListBox Width="150" ItemsSource="{Binding Devices}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Information.InstanceName}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<WrapPanel Orientation="Horizontal" DockPanel.Dock="Top">
			<TextBlock Text="InputFPS : " />
			<TextBlock Text="{Binding FPS}" />
			<TextBlock Text=" UpdateTime : " />
			<TextBlock Text="{Binding UpdateTime}" />
		</WrapPanel>
		<ScrollViewer>
			<TextBox sf:LogBehavior.IsScrollEnd="True" sf:LogBehavior.Log="{Binding Log}" x:Name="log" AcceptsReturn="True" IsReadOnly="True" />
		</ScrollViewer>
	</DockPanel>
</Window>
