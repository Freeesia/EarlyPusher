<Window x:Class="WebCamTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
        Title="MainWindow"
        Width="525"
        Height="350">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<m:VideoCaptureElement Grid.Row="0"
		                       DesiredPixelHeight="1920"
		                       DesiredPixelWidth="1080"
		                       FPS="60"
		                       RenderTransformOrigin="0.5,0.5"
		                       VideoCaptureSource="{Binding SelectedItem,
		                                                    ElementName=cmbDevices}">
			<m:VideoCaptureElement.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="-1" ScaleY="1" />
					<SkewTransform AngleX="0" AngleY="0" />
					<RotateTransform Angle="0" />
					<TranslateTransform />
				</TransformGroup>
			</m:VideoCaptureElement.RenderTransform>
		</m:VideoCaptureElement>

		<ComboBox x:Name="cmbDevices"
		          Grid.Row="1"
		          ItemsSource="{Binding Source={x:Static m:MultimediaUtil.VideoInputNames}}" />
	</Grid>
</Window>
